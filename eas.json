{
  "cli": {
    "version": ">= 7.6.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "EXPO_PUBLIC_API_URL": "https://sermonmate.bobakdevs.com/api/v1"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096",
        "EXPO_PUBLIC_API_URL": "https://sermonmate.bobakdevs.com/api/v1"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
